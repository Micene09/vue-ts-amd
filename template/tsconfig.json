{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2015",
		"removeComments": true,
		"target": "es5",
		"noImplicitAny": true,
		"baseUrl": "/",
		"outDir": "./release/",
		"sourceMap": true,
		"noUnusedLocals": false,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"types": [
			"requirejs",
			"mocha"
		],
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": ["node_modules", "scripts", "test"]
}