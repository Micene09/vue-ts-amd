{
	"compilerOptions": {
		"module": "amd",
		"moduleResolution": "node",
		"target": "es2015",
		"baseUrl": ".",
		"outDir": "./release/",
		"sourceMap": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"types": [ "requirejs", "mocha", "chai" ]
	},
	"include": [
		"./src/**/*",
		"./test/**/*"
	]
}