{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "amd",
		"target": "es2015",
		"noImplicitAny": true,
		"baseUrl": "/",
		"outDir": "./release/",
		"sourceMap": true,
		"noUnusedLocals": false,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"types": [ "requirejs", "mocha", "chai" ],
		"paths": {
			"vue": ["node_modules/vue/dist/vue"]
		}
	},
	"include": [
		"src/**/*",
		"test/**/*"
	],
	"exclude": ["node_modules", "scripts"]
}