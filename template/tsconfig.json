{
	"compilerOptions": {
		"module": "amd",
		"moduleResolution": "node",
		"target": "es2015",
		"baseUrl": ".",
		"outDir": "./release/",
		"sourceMap": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"types": [ "requirejs", "mocha", "chai" ],
		"paths": {
			"vue": ["./node_modules/vue/dist/vue.js"]
		}
	},
	"include": [
		"./src/**/*",
		"./test/**/*"
	]
}