{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2015",
		"target": "es2015",
		"noImplicitAny": true,
		"baseUrl": "/",
		"outDir": "./release/",
		"sourceMap": true,
		"noUnusedLocals": false,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"types": [ "requirejs", "mocha", "chai" ],
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*",
		"test/**/*"
	],
	"exclude": ["node_modules", "scripts"]
}